# 오프라인 개발 환경 설정 (맥도날드 같은 공공 WiFi에서 개발할 때)
# 이 파일을 .env로 복사하여 사용하세요

# 오프라인 모드 활성화
OFFLINE_MODE=true

# 데이터베이스 설정 (로컬 SQLite 사용)
DATABASE_URL=sqlite:///instance/site.db

# Flask 설정
FLASK_ENV=development
ENV=development
SECRET_KEY=dev-flask-secret-key-for-offline-development

# JWT 설정
JWT_SECRET_KEY=dev-jwt-secret-key-for-offline-development

# Redis 비활성화 (오프라인 모드)
REDIS_URL=redis://localhost:6379/0

# Celery 비활성화 (오프라인 모드)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 개발용 설정
DEBUG=true
