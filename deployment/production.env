# 프로덕션 환경 설정
# 이 파일을 .env로 복사하여 사용하세요

# 환경 설정
FLASK_ENV=development
ENV=development
DEBUG=true
DEV_MODE=true

# 보안 키 (실제 운영 시에는 강력한 랜덤 값으로 변경 필요)
SECRET_KEY=prod-super-secret-key-change-in-production-2025
JWT_SECRET_KEY=prod-jwt-secret-key-change-in-production-2025

# 데이터베이스 설정
DATABASE_URL=sqlite:///instance/lunch_app.db

# Redis 설정 (캐싱 및 세션 관리)
REDIS_URL=redis://localhost:6379/0
OFFLINE_MODE=true

# Celery 백그라운드 작업 설정
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://192.168.45.177:3000

# 모듈 활성화 설정
ENABLE_AUTH=true
ENABLE_GROUP_MATCHING=true
ENABLE_REALTIME=true
ENABLE_POINTS=true
ENABLE_SCHEDULER=true
ENABLE_API=true

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 이메일 설정 (프로덕션용)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=kihun.seong.official@gmail.com
